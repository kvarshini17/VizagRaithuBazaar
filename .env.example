# VizagRaithuBazaar Environment Variables
# ==========================================
# IMPORTANT: 
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. NEVER commit .env to Git!
# ==========================================

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

# Secret key for sessions (CHANGE THIS!)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=change-this-to-a-random-64-character-string-immediately

# Environment: development or production
FLASK_ENV=development

# Debug mode: True for development, False for production
DEBUG=True

# Port number
PORT=5000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite database path (for development)
DATABASE_URL=sqlite:///vizag_bazaar.db

# PostgreSQL database URL (for production)
# Format: postgresql://username:password@host:port/database
# DATABASE_URL=postgresql://user:password@localhost:5432/vizag_bazaar

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session cookie settings
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=False
PERMANENT_SESSION_LIFETIME=3600

# ============================================================================
# EMAIL CONFIGURATION (Optional - for OTP via email)
# ============================================================================

# SMTP server settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Email credentials
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Default sender
MAIL_DEFAULT_SENDER=noreply@vizagraithubazaar.com

# ============================================================================
# SMS CONFIGURATION (Optional - for OTP via SMS)
# ============================================================================

# SMS API provider (Twilio, MSG91, etc.)
SMS_API_KEY=your-sms-api-key-here
SMS_API_SECRET=your-sms-api-secret-here
SMS_SENDER_ID=VIZAGR

# Twilio specific (if using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 specific (if using MSG91)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=VIZAGR

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in seconds (15 minutes)
LOCKOUT_DURATION=900

# OTP expiry time in seconds (10 minutes)
OTP_EXPIRY_TIME=600

# Password minimum length
MIN_PASSWORD_LENGTH=8

# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum requests per minute
RATE_LIMIT_PER_MINUTE=60

# Maximum OTP requests per hour
MAX_OTP_REQUESTS_PER_HOUR=5

# ============================================================================
# FILE UPLOAD SETTINGS (if you add file uploads)
# ============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=5

# Allowed file extensions
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf

# Upload folder path
UPLOAD_FOLDER=uploads/

# ============================================================================
# PAYMENT GATEWAY (if you add payments)
# ============================================================================

# Razorpay (popular in India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# ============================================================================
# GOOGLE MAPS API (if you add location features)
# ============================================================================

GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ============================================================================
# ADMIN SETTINGS
# ============================================================================

# Admin phone number (receives alerts)
ADMIN_PHONE=9999999999

# Admin email
ADMIN_EMAIL=admin@vizagraithubazaar.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
ENABLE_SMS_OTP=False
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_PAYMENTS=False
ENABLE_ANALYTICS=False

# ============================================================================
# PRODUCTION SETTINGS (Only for production deployment)
# ============================================================================

# Domain name
DOMAIN=vizagraithubazaar.com

# Force HTTPS
FORCE_HTTPS=True

# CORS origins (comma-separated)
CORS_ORIGINS=https://vizagraithubazaar.com,https://www.vizagraithubazaar.com

# ============================================================================
# NOTES
# ============================================================================

# How to use this file:
# 1. Copy: cp .env.example .env
# 2. Edit .env with your actual values
# 3. Restart your application
# 4. NEVER commit .env to Git (it's in .gitignore)

# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_hex(32))"

# Check if .env is ignored:
# git status (should NOT show .env)
